

@model Employee

@{
    ViewData["Title"] = "Edit";
}

<script src="~/js/editemployee.js"></script>

<section class="add-employee-container">
    <div class="container-fluid h-custom d-flex justify-content-center">
        <div class="row col-md-7 employee">
            <h1 class="mb-3 text-center add-title">Edit Employee</h1>
            <form asp-action="AddEditEmployeeDetails">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group mb-4" style="display:none">
                    <label asp-for="EmpId" class="control-label"></label>
                    <input asp-for="EmpId" class="form-control" />
                    <span asp-validation-for="EmpId" class="text-danger"></span>
                </div>
                <div class="form-group mb-4" style="display:none">
                    <label asp-for="Employee_Code" class="control-label"></label>
                    <input asp-for="Employee_Code" onchange="codeCheck(this)" class="form-control" />
                    <span asp-validation-for="Employee_Code" class="text-danger"></span>
                </div>
                <div class="form-group mb-4">
                    <label for="First_Name" class="control-label">First name</label>
                    <input asp-for="First_Name" class="form-control" />
                    <span asp-validation-for="First_Name" class="text-danger"></span>
                </div>
                <div class="form-group mb-4">
                    <label for="Last_Name" class="control-label">Last name</label>
                    <input asp-for="Last_Name" class="form-control" />
                    <span asp-validation-for="Last_Name" class="text-danger"></span>
                </div>
                <div class="form-group mb-4">
                    <label for="Address" class="control-label">Address</label>
                    <input asp-for="Address" class="form-control" />
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>
                <div class="form-group mb-4">
                    <label for="Email_Address" class="control-label">Email</label>
                    <input asp-for="Email_Address" class="form-control" />
                    <span asp-validation-for="Email_Address" class="text-danger"></span>
                </div>
                <div id="phonnumberlist" class="form-group mb-4">
                    @for (var i = 0; i < Model.Phone.Count; i++)
                    {
                        @if (i == 0)
                        {
                            <div class="form-group">
                                <label for="Phone" class="control-label">Phone number</label>
                                <div id="phone_tr" class="tr_phone form-outline ">
                                    <div class="form-group w-100 d-flex justify-content-between align-content-center mb-4">
                                        <input asp-for="Phone" type="text" class=" form-control onlynumberallow" onkeyup="validate(this)" maxlength="10" />
                                        <a onclick="addNumbers()" id="addNumber">Add <i class="fa fa-plus"></i></a>
                                    </div>
                                </div>
                            </div>
                        }
                        else
                        {
                            <input asp-for="Phone" class="form-control mb-4 onlynumberallow" onkeyup="validate(this)" maxlength="10" />
                        }
                    }
                </div>
                <div class="form-group d-flex justify-content-between align-content-center">
                    <a asp-action="EmployeeLis">
                        <input type="button" value="Go Back" class="btn btn-success btn-lg btn-light skip-button" />
                    </a>
                    <input type="submit" value="Save" class="btn btn-success btn-lg submit-btn" />
                </div>
            </form>
        </div>
    </div>
</section>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

